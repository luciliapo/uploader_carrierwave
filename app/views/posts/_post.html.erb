<h2><%= link_to post.title, post_path(post) %></h2>

<%= link_to(image_tag(post.image.thumb.url, alt: 'Image'),
post.image.url, target: '_blank') if post.image? %>

<p><%= truncate(post.body, length: 150) %></p>

<p><%= link_to 'Edit', edit_post_path(post) %></p>

<p> <%= link_to 'Remove', post_path(post),
class: 'btn btn-danger',
    method: :delete, data: {confirm: 'Are you sure?'} %> </p>

<hr>
